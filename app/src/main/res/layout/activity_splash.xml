<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- overlayFill (solid color) untuk efek bold penuh -->
    <View
        android:id="@+id/overlayFill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7C4623"
        android:alpha="0"
        android:visibility="visible" />

    <!-- splashBlob: tekstur cipratan (optional) -->
    <ImageView
        android:id="@+id/splashBlob"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_blob"
        android:alpha="0"
        android:visibility="visible" />

    <!-- kumpulan logo: teks di atas mangkuk, tapi kita bungkus di FrameLayout kecil supaya mereka tetap relatif -->
    <FrameLayout
        android:id="@+id/logo_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp">

        <!-- logo text (gambar teks saja atau gunakan ImageView kosong jika pakai combined logo) -->
        <ImageView
            android:id="@+id/logoText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_text"
        android:contentDescription="CookiTime text"
        android:alpha="0"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"/>

        <!-- bowl di bawah tulisan (posisi relatif dalam logo_group) -->
        <ImageView
            android:id="@+id/bowl"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bowl"
            android:contentDescription="Bowl" />

        <!-- whisk di atas bowl -->
        <ImageView
            android:id="@+id/whisk"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/whisk"
            android:contentDescription="Whisk" />
    </FrameLayout>

</FrameLayout>
