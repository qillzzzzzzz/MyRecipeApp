<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profil_bg"
    android:paddingStart="20dp"
    android:paddingTop="12dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    tools:context="com.example.myrecipeneww.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: back arrow + title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Edit Profile"
                android:textColor="@color/cooki_brown_dark"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Profile image with small camera icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgEditProfile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/circle_bg"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person" />

                <!-- camera small icon overlay -->
                <ImageView
                    android:id="@+id/imgCameraBadge"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="-8dp"
                    android:layout_marginBottom="-8dp"
                    android:padding="6dp"
                    android:src="@drawable/camera_profil" />
            </FrameLayout>
        </FrameLayout>

        <!-- Form fields container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Name"
                android:textColor="@color/cooki_brown_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_field"
                android:hint="Charlotte"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/cooki_brown_dark"
                android:textColorHint="#8b6b57" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email address"
                android:textColor="@color/cooki_brown_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_field"
                android:hint="charlottegraphics@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- User Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="User Name"
                android:textColor="@color/cooki_brown_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etUsernm"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_field"
                android:hint="bihunngulung"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Password"
                android:textColor="@color/cooki_brown_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_field"
                android:hint="**********"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Phone -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Phone Number"
                android:textColor="@color/cooki_brown_dark"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPhn"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_field"
                android:hint="+62  085328765"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Save button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveChanges"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/save_change"
                android:text="Save Change"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
