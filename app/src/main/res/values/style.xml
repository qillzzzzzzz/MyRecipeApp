<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style utama untuk tema aplikasi -->
    <style name="Theme.CookiTime" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Style khusus teks CookiTime -->
    <style name="cookitime">
        <item name="android:fontFamily">@font/chewy_regular</item>
        <item name="android:textColor">#7C4623</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cookitime2">
        <item name="android:fontFamily">@font/shine_bubble</item>
        <item name="android:textColor">#7C4623</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        </style>


    <style name="cookitime3">
        <item name="android:fontFamily">@font/shine_bubble</item>
        <item name="android:textColor">#7C4623</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style default -->
    <style name="cookitime.Default">
        <item name="android:fontFamily">@font/justanotherhand_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="cookitime.normal">
        <item name="android:fontFamily">@font/super_trend</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="cookitime.basic2">
        <item name="android:fontFamily">@font/vanilla_caramel</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="CropImageActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Pakai warna tombol yang kelihatan -->
        <item name="colorPrimary">#795548</item> <!-- coklat -->
        <item name="colorAccent">#795548</item>
        <item name="colorControlNormal">#795548</item>
        <item name="colorControlActivated">#795548</item>
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
    <style name="Theme.AppCompat.DayNight.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">#000000</item> <!-- warna hitam biar toolbar kelihatan -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>



</resources>
