<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- gradient halus -->
    <gradient
        android:startColor="#FFF0E6"
        android:endColor="#FFE6D9"
        android:angle="270"/>

    <!-- radius besar -> lonjong/pill -->
    <corners android:radius="24dp"/>

    <!-- optional: border tipis -->
    <stroke
        android:width="1dp"
        android:color="#33000000"/>

    <!-- padding internal (drawable dapat dipakai dengan inset di layout juga) -->
    <size android:height="56dp"/>
</shape>
